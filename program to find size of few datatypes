#include<iostream>
using namespace std;
int main()
{
cout<<"size of char: "<< sizeof(char)<<"  in byte"<< endl;    
cout<<"size of int: "<< sizeof(int)<<"  in bytes"<< endl;
cout<<"size of float: "<< sizeof(float)<<"  in bytes"<< endl;
cout<<"size of double: "<< sizeof(double)<<"  in bytes"<< endl;
return 0;
}
