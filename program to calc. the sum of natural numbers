
#include <iostream>
using namespace std;
int main() {
  int sum,c,n,i;
  cout<<"Enter the value of n : "<<endl;
  cin>> n;
  sum=0;
  for(i=0;i<=n;i++){
      sum = sum+i;
  }
  cout<<"the sum of first "<<n<<" natural numbers is "<<sum;
//    other method -- by using formula 
//     c=n*(n+1)/2;
//     cout<<c;

    return 0;
}
